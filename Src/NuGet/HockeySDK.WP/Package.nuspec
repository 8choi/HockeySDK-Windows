<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>HockeySDK.WP</id>
    <version>$version$</version>
    <authors>$author$</authors>
    <owners>$author$</owners>
    <copyright>$copyright$</copyright>
    <licenseUrl>http://go.microsoft.com/fwlink/?LinkID=510709</licenseUrl>
    <projectUrl>http://go.microsoft.com/fwlink/?LinkID=510710</projectUrl>
    <iconUrl>https://rink.hockeyapp.net/images/icon@2x.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Use HockeyApp in your WindowsPhone apps. Collect crash reports, provide a feedback-functionality and enable automatic updates for beta versions.</description>
    <language>en-US</language>
    <tags>crash reports reporting feedback WP8 WP81SL windows phone hockeyapp</tags>
    <dependencies>
      <group targetFramework="wp8">
        <dependency id="HockeySDK.Core" version="$version$" />
        <dependency id="Microsoft.Bcl.Async" version="1.0.168" />
      </group>
      <group targetFramework="net40">
        <dependency id="Microsoft.Bcl.Async" version="1.0.168" />
        <dependency id="Microsoft.Diagnostics.Tracing.EventSource.Redist" version="1.1.24"/>
      </group>
    </dependencies>
  </metadata>

  <files>
    <!-- HockeySDK -->

    <file src="$configuration$\HockeySDK_WP8\Microsoft.HockeyApp.Kit*" target="lib\wp8" />
    <file src="$configuration$\HockeySDK_WP8\de\Microsoft.HockeyApp.Kit.*" target="lib\wp8\de" />
    <file src="$configuration$\NuGet\HockeySDK.WP\content\**" target="content" />
    <file src="$configuration$\NuGet\HockeySDK.WP\tools\**" target="tools" />

    <!-- Application Insights -->
    <file src="$configuration$\Extensibility.Wp80\Microsoft.HockeyApp.*" target="lib\portable-win81" />
  </files>
</package>